@model YemekTarifleri.Entity.Kategori
@{
    ViewBag.Title = "SubCreate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<title>Alt Kategori Ekle</title>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KategoriAd, "Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriAd, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                @Html.ValidationMessageFor(model => model.KategoriAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KategoriAdet, "KategoriAdet", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriAdet, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                @Html.ValidationMessageFor(model => model.KategoriAdet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ParentId, "Ana Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ParentId", null, htmlAttributes: new { @class = "form-control", @style = "max-width:35%" })
                @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                @Html.ActionLink("Kategori Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

