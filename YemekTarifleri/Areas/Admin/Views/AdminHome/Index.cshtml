        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.YorumSayisi</h3>
                    <p>Yorum Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/Admin/Yorum/Index" class="small-box-footer">Ayrıntılar.. <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.TarifSayisi</h3>
                    <p>Tarif Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/Admin/Tarif/Index" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
