@model YemekTarifleri.Models.StateModelStyle
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<title>Anasayfa</title>
<h2>Anasayfa</h2>
