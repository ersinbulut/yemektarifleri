@model IEnumerable<YemekTarifleri.Entity.Tarif>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tarifler</h2>
<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tarif Resim</th>
                            <th>Tarif Adı</th>
                            <th>Tarif Durumu</th>
                            <th>Tarif Sahibi</th>
                            @*<th>Eklenme Tarihi</th>
                                <th>Puan</th>*@
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Content/Images/@item.TarifResim" width="75" height="50" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TarifAd)
                                </td>
                                <td>
                                    @if (item.TarifDurum)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TarifSahip)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.YemekTarih)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YemekPuan)
                                </td>*@
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete",new { id = item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Tarif Resim</th>
                            <th>Tarif Adı</th>
                            <th>Tarif Durumu</th>
                            <th>Tarif Sahibi</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>
