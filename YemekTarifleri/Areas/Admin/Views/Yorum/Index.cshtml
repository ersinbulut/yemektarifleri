@model IEnumerable<YemekTarifleri.Entity.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar</h2>
<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Profil Resmi</th>
                            <th>Yemek Adı</th>
                            <th>Yorum Yapan Kişi</th>
                            <th>Yorum Tarih</th>
                            <th>Yorum Onay</th>
                            <th>Yorum İçerik</th>
                            @*<th>Eklenme Tarihi</th>
                                <th>Puan</th>*@
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="~/Content/Images/@item.ProfileImageName" width="75" height="50" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YemekAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YorumAdSoyad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YorumTarih)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YorumOnay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Yorumicerik)
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete",new { id = item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Profil Resmi</th>
                            <th>Yemek Adı</th>
                            <th>Yorum Yapan Kişi</th>
                            <th>Yorum Tarih</th>
                            <th>Yorum Onay</th>
                            <th>Yorum İçerik</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>
