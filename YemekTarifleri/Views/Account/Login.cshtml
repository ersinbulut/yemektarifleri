@using YemekTarifleri.Models
@model Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- breadcrumb -->
<div class="container">
    <ol class="breadcrumb w3l-crumbs">
        <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
        <li class="active">Giriş</li>
    </ol>
</div>
<!-- //breadcrumb -->
<!-- login-page -->
<div class="login-page about">
    <img class="login-w3img" src="images/img3.jpg" alt="">
    <div class="container">
        <h3 class="w3ls-title w3ls-title1">Hesabınıza Giriş Yapın</h3>
        <div class="login-agileinfo">
            <form action="/Account/Login" method="post">
                @Html.AntiForgeryToken()
                <input class="agile-ltext" type="text" name="Username" placeholder="Username" required="">
                <input class="agile-ltext" type="password" name="password" placeholder="Password" required="">
                <div class="wthreelogin-text">
                    <ul>
                        <li>
                            <label class="checkbox">
                                <input type="checkbox" name="checkbox"><i></i>
                                <span> Beni Hatırla</span>
                            </label>
                        </li>
                        <li><a href="#">Şifremi Unuttum</a> </li>
                    </ul>
                    <div class="clearfix"> </div>
                </div>
                <input type="submit" value="Giriş">
            </form>
            <p>Hesabın Yok mu ? <a href="/Account/Register"> Kayıt Ol</a></p>
        </div>
    </div>
</div>
<!-- //login-page -->
