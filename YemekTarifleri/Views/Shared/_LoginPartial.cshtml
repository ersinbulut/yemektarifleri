@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul>
    <li>
        @Html.ActionLink("Hosgeldin " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><i class="fa fa-sign-in" aria-hidden="true">@Html.ActionLink("Profil", "UserProfile", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</i></li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıkıs Yap</a></li>
</ul>
    }
}
else
{
    <ul>
        <li><i class="fa fa-sign-in" aria-hidden="true">@Html.ActionLink("Giriş Yap", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</i></li>
        <li><i class="fa fa-user-plus" aria-hidden="true">@Html.ActionLink("Kayıt Ol", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</i></li>

    </ul>

}